<resources>

    <style name="Dash_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/dash_blue</item>
        <item name="android:colorPrimaryDark">@color/dash_blue_dark</item>
        <item name="android:colorAccent">@color/white</item>

        <item name="colorPrimary">@color/dash_blue</item>

        <item name="android:navigationBarColor">@color/dash_blue_dark</item>

        <item name="android:colorBackground">@color/dash_blue</item>
        <item name="android:colorForeground">@color/white</item>

        <item name="android:windowBackground">@color/dark_background</item>

        <item name="colorControlActivated">@color/dash_blue</item>
        <item name="colorControlHighlight">@color/dash_blue</item>
        <item name="colorControlNormal">@color/semi_grey</item>
        <item name="colorSwitchThumbNormal">@color/deep_blue</item>

        <item name="android:textColorHint">@color/semi_grey</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="text_list_item_title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="text_list_item_property" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_title_small_grey" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_small_semi_white" parent="android:Widget.TextView">
        <item name="android:textColor">@color/semi_white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_content_bold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="button_blue" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_material_dark_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/lightest_grey</item>
    </style>

    <style name="separator" parent="android:Widget.TextView">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SplashStyle" parent="Dash_theme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
